
  <% layout('layouts/boilerplate') %>
<link href="https://api.mapbox.com/mapbox-gl-js/v3.6.0/mapbox-gl.css" rel="stylesheet">
  <div id="map" style="width: 100%; height: 400px"></div>
    <h1>All campgrounds</h1>
    
   
   
        <% for(let camp of campgroundz) {%>
             <div class="card mb-3">
              <div class="row">
                  <div class="col-md-4">
                    <% if (camp.images.length> 0) { %>
                      <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
                      <% } else { %>
                        <!-- Provide a fallback image if no images are available -->
                        <img class="img-fluid"
                          src="https://res.cloudinary.com/dzmcbgayu/image/upload/v1725309945/YelpCamp/fzsqng2anmxngney7vrk.png"
                          alt="No image available">
                        <% } %>
                  </div>
                      <div class="col-md-8">
                          <div class="card-body">
                             <h4 class="card-title"><%= camp.title %></h4>
                             <p class="card-text"><%= camp.description %></p>
                             <p class="card-text">
                                <small class="text-muted"><%= camp.location %></small>
                              </p>
                              <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View</a>
                          </div>
                      </div>
                </div>
            </div>    
        <% } %>    

<script>
     const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
     const campgrounds = {features :<%- JSON.stringify(campgroundz) %>};
</script>
<script src="https://api.mapbox.com/mapbox-gl-js/v3.6.0/mapbox-gl.js"></script>
<script src="/javascript/clusterMap.js"></script>
