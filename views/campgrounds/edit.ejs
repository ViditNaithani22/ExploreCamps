

<% layout('layouts/boilerplate') %>
<div class="text-center">
    <h2>Edit Campground</h2>
</div>
<div class="col-6 offset-3 mt-3">
    <form action="/campgrounds/<%= camp._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row mb-3">
            <label class="col-md-3" for="title">Title:</label>
            <input class="col-md-8 form-control" type="text" id="title" name="campground[title]" value="<%= camp.title %>" required>
            <div class="valid-feedback">looks good</div>
        </div>

        <div class="row mb-3">
            <label class="col-md-3" for="location">Location:</label>
            <input class="col-md-8 form-control" type="text" id="location" name="campground[location]" value="<%= camp.location %>" required>
            <div class="valid-feedback">looks good</div>
        </div>
        
        <!-- <div class="row mb-3">
            <label class="col-md-3" for="image">Image Url:</label>
            <input class="col-md-8 form-control" type="text" id="image" name="campground[image]" value="<%= camp.image %>" required>
            <div class="valid-feedback">looks good</div>
        </div> -->
        <!-- <div class="row mb-3">
         <label class="col-md-3" for="image">Add images</label>
         <input type="file" name="image" multiple id="image">
        </div> -->    

        <div class="row mb-3">
            <label class="col-md-3" for="price">Price:</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input class="form-control" type="number" id="price" name="campground[price]" aria-describedby="price-label"
                    placeholder="0.00" value="<%= camp.price %>" required>
                <div class="valid-feedback">looks good</div>
            </div>
        </div>
        
        <div class="row mb-3">
            <label class="col-md-3" for="description">Description:</label>
            <textarea class="col-md-8 form-control" id="description" name="campground[description]" required><%= camp.description %></textarea>
            <div class="valid-feedback">looks good</div>
        </div>

        <div class="row mb-3">
            <label for="image" class="form-label">Add images</label>
            <input class="form-control" type="file" name="image" id="image" multiple>
        </div>
        
        <% camp.images.forEach((img, i)=> { %>
            <img src="<%= img.thumbnail %>" class="img-thumbnail">
            <div class="mb-3">
                <label for="image-<%= i %>">Delete?</label>
                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
            </div>
        <% }) %>
        
        <div class="mb-3 d-grid gap-2">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
    <h1> </h1>
    
    <a href="/campgrounds/<%= camp._id %>"><div class="mb-3 d-grid gap-2"><button class="btn btn-success">Cancel</button></div></a>
</div>




